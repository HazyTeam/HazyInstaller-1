<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f47f1f"
    tools:context="net.hazyrom.hazyinstaller.Tab2Fragment$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Backup your Apps"
        android:paddingLeft="30sp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="21dp"
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="We recommend you to Backup all your Apps before attempting the Installation of Hazy."
        android:id="@+id/textView2"
        android:paddingLeft="30sp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:checked="true"
        android:button="@drawable/checkboxes"
        android:layout_alignTop="@+id/mainbackup"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Backup my Applications"
        android:textSize="16dp"
        android:id="@+id/mainbackup"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_below="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text='You will make a backup of your apps. \nThey will be saved\nin the path "SD-Card/Hazy"'
        android:id="@+id/undermainbackup"
        android:textSize="11dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/mainbackup"
        android:layout_toEndOf="@+id/checkBox" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backup"
        android:src="@drawable/backup"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView"
        android:minWidth="500px"
        android:maxWidth="500px"
        android:layout_below="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/button"
        android:onClick="exit"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/indicator_no"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/indicator_yes"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView2"
        android:src="@drawable/indicator_yes"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/line"
        android:scaleType="fitStart"
        android:gravity="fill_horizontal"
        android:adjustViewBounds="true"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                       "
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="                    "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="                        "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="                                "
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/nullbutton"
        android:layout_toEndOf="@+id/undermainbackup"
        android:background="@android:color/transparent"
        android:onClick="dontTapStart"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView5" />

</RelativeLayout>
